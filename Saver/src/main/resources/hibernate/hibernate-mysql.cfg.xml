<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/prototype?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.current_session_context_class">thread</property>
    <property name="hibernate.query.factory_class">org.hibernate.hql.ast.ASTQueryTranslatorFactory</property>
    <mapping resource="com/artech/prototype2/saver/entity/BigramEnVarOne.hbm.xml"/>
    <mapping resource="com/artech/prototype2/saver/entity/DictionaryRu.hbm.xml"/>
    <mapping resource="com/artech/prototype2/saver/entity/DictionaryEn.hbm.xml"/>
    <mapping resource="com/artech/prototype2/saver/entity/BigramRuVarOne.hbm.xml"/>
    <mapping resource="com/artech/prototype2/saver/entity/ThreegramRuVarOne.hbm.xml"/>
    <mapping resource="com/artech/prototype2/saver/entity/ThreegramEnVarOne.hbm.xml"/>
    <mapping resource="com/artech/prototype2/saver/entity/FourgramRuVarOne.hbm.xml"/>
    <mapping resource="com/artech/prototype2/saver/entity/FourgramEnVarOne.hbm.xml"/>
    <mapping resource="com/artech/prototype2/saver/entity/DocumentsRu.hbm.xml"/>
    <mapping resource="com/artech/prototype2/saver/entity/DocumentsEn.hbm.xml"/>
<!--    <mapping resource="com/artech/prototype2/saver/entity/IndexesRu.hbm.xml"/>
    <mapping resource="com/artech/prototype2/saver/entity/IndexesEn.hbm.xml"/>
    <mapping resource="com/artech/prototype2/saver/entity/IdfRu.hbm.xml"/>
    <mapping resource="com/artech/prototype2/saver/entity/IdfEn.hbm.xml"/>-->
